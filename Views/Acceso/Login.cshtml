@model ProyectoFinal.Models.UserLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema Facturación</title>
    <link rel="stylesheet" href="~/css/estilo.css"> 
</head>
<body class="login_page">
    <div class="contenido">
        <h1>SISTEMA</h1>
        <h2>DE FACTURACION ELECTRONICA</h2>

        <img src="~/images/CajasAlmacen.png" alt="Cajas" class="cajas">

        <div class="login_box">
            <img src="~/images/@(ViewBag.CredencialesValidas != null && (bool)ViewBag.CredencialesValidas ? "CerraduraVerde.png" : "CerraduraRoja.png")" alt="Candado" class="candado">

            <div class="formulario">
                <div class="titulo">Control de Acceso</div>

                <form asp-controller="Acceso" asp-action="Login" method="post" class="center_content">
                    <div class="campo">
                        <label for="usuario">Usuario.:</label>
                        <input type="text" id="usuario" placeholder="Introduzca su Usuario" asp-for="LogUsuario">
                    </div>

                    <div class="campo">
                        <label for="clave">Clave.:</label>
                        <input type="password" id="clave" placeholder="Introduzca su Contraseña" asp-for="LogClave">
                    </div>

                    <div class="boton-container">
                        <button type="submit">Aceptar</button>
                    </div>
                </form>

               @if (ViewBag.Mensaje != null)
{
    <div class="mensaje @(ViewBag.CredencialesValidas != null && (bool)ViewBag.CredencialesValidas ? "mensaje-verde" : "mensaje-rojo")">
        @ViewBag.Mensaje
    </div>

    @if (ViewBag.CredencialesValidas != null && (bool)ViewBag.CredencialesValidas)
    {
        <script>
            setTimeout(function () {
                window.location.href = '/Panel/Dashboard';
            }, 2000); // Redirige después de 2 segundos
        </script>
    }
}

            </div>
        </div>
    </div>
</body>
</html>
