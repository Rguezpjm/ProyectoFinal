@{
    Layout = null; 
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel - Sistema de Facturación</title>
    <link rel="stylesheet" href="~/css/panel.css" />
</head>
<body>
    <header class="menu-superior">
        <nav>
            <ul>
                <li>Inicio</li>
                <li>Mantenimiento</li>
                <li>Operaciones</li>
                <li>Reportes</li>
                <li>Seguridad</li>
